{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*",
              "src/*",
              "*"
          ]
      },
      "lib": [
        "es2017",
        "es2016"
    ],
  },
  "include": [
      "src/**/*",
      "../customer-service-frontend/src/CustomerService/customer-store.js",
      "../customer-service-frontend/src/CustomerService/CustomerSearchForm.js"
  ]
}
